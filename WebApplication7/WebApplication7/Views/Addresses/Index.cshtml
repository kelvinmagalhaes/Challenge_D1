@model IEnumerable<WebApplication7.Models.Address>

@{
    ViewBag.Title = "Index";
}

<h2><center>Addresses</center></h2>
<script>
    x = window.location.href.split("/");
    //console.log("VALUE:", x[x.length - 1]);
</script>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Street)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MoreInfo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostalCode)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Country)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.MoreInfo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                <a href="/Addresses/Edit/@item.IDAddress" title="Send" class="btn btn-info">
                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>


                    <a href="/Addresses/Details/@item.IDAddress" title="Send" class="btn btn-info">
                        <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>


                        <a href="/Addresses/Delete/@item.IDAddress" title="Send" class="btn btn-info">
                            <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
            </td>
        </tr>
    }

</table>
<p>
