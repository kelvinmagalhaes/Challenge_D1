@model IEnumerable<WebApplication7.Models.Phone>

@{
    ViewBag.Title = "Index";
}

<h2><center>Phones</center></h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Customer.CPF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NamePhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.CPF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NamePhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            <a href="/Phones/Edit/@item.IDPhone" title="Send" class="btn btn-info">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>


                <a href="/Phones/Details/@item.IDPhone" title="Send" class="btn btn-info">
                    <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>


                    <a href="/Phones/Delete/@item.IDPhone" title="Send" class="btn btn-info">
                        <span class="glyphicon glyphicon-erase" aria-hidden="true"></span>
        </td>
    </tr>
}

</table>
<p>
    <center>
        <a href="/Phones/Create" title="Send" class="btn btn-info">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            Create New
        </a>
    </center>
</p>